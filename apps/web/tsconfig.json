{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "../..",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@devos/shared": ["../../packages/shared/src"],
      "@vpsos/types": ["plugins/types"],
