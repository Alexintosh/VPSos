{
  "name": "vpsos",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "bun --filter @vpsos/api dev",
    "dev:web": "bun --filter @vpsos/web dev",
    "lint": "bun --filter ./... run check",
    "build": "bun run scripts/build.ts all",
    "build:web": "bun run scripts/build.ts web",
    "build:api": "bun run scripts/build.ts api",
    "clean": "bun run scripts/build.ts clean"
  },
  "devDependencies": {
    "bun-types": "^1.3.8"
  }
}
